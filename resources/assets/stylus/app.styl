@require "html5-reset"
@import "variables"

@import "components/table"
@import "components/forms"
@import "components/select"

@import "modules/helpers"
@import "modules/typo"
@import "modules/sidebar"
@import "modules/global"
@import "modules/box"
@import "modules/button"

html, body{
  height:100%;
}


body {
    margin:0;
    padding:0;
    font font-size 'Open Sans', Arial, sans-serif
    -webkit-font-smoothing: antialiased;
    font-weight 400
    background: #eff3f6
}

input[type="text"] {
	width: 100%;
	box-sizing: border-box;
	-webkit-box-sizing:border-box;
	-moz-box-sizing: border-box;
}

.bg-light {
	color: #354052
	background: bg-light
}

a 
	text-decoration none

.container {
	height 100%
}
.row {
	lost-flex-container: row;
}

#app.row 
	lost-flex-container: row;
	height 100%
	> div
		height: 100%
		&:first-child
			width 200px
		&:last-child
			width calc(100% - 200px)
			
.half-column {
	lost-column: 1/2;
}
			
.main-content {
	padding:30px;
}

.badge {
	display: inline-block;
	min-width: 10px;
	padding: 3px 7px;
	font-size: 12px;
	font-weight: 700;
	line-height: 1;
	color: #fff;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	background-color: #777;
	border-radius: 10px;
}

.label-default {
	background-color: #777;
}
.label-info {
	background-color: #5bc0de;
}

.label-warning {
	background-color: #f0ad4e;
}

.label {
	display: inline;
	padding: .2em .6em .3em;
	font-size: 80%;
	font-weight: 600;
	line-height: 1;
	color: #fff;
	text-align: center;
	white-space: nowrap;
	vertical-align: baseline;
	border-radius: .25em;
}